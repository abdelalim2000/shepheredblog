{{>header}}
{{>navbar}}
<div class="bg-primary p-4 rounded mb-4 border border-2 border-black">
    <nav aria-label="breadcrumb container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active text-white fs-1 text-uppercase"><a href="/" class="text-white">Home</a></li>
            <li class="breadcrumb-item text-white fs-1 text-uppercase">Posts</li>
        </ol>
    </nav>
</div>
<main class="container">
    <div class="row justify-content-center gap-2">
        {{#each data}}
        <div class="col-3 card p-2">
            <div class="card-body d-flex flex-column justify-content-between align-items-start">
                <h3 class="fs-4 text-primary">{{this.title}}</h3>
                <p class="lead text-muted">{{this.body}}</p>
                <a href="/posts/show/{{this.id}}" class="btn btn-success">read more</a>
            </div>
        </div>
        {{/each}}
    </div>
</main>
{{>footer}}
